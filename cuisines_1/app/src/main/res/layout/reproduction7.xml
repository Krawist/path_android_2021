<?xml version="1.0" encoding="utf-8"?>
<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#1E0423">
    <com.google.android.material.card.MaterialCardView android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_margin="15dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#200A29"
            android:orientation="vertical"
            android:paddingStart="40dp"
            android:paddingTop="40dp"
            android:paddingEnd="20dp"
            >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <ImageView
                    android:id="@+id/image7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_arrow_back_ios_24"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/image71"
                    app:layout_constraintBottom_toBottomOf="@id/image71"
                    app:tint="@color/white"
                    />
                <ImageView
                    android:id="@+id/image71"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:src="@drawable/arriere"
                    app:tint="#15A9EC"
                    />
                <ImageView
                    android:id="@+id/image72"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="@id/image71"
                    app:layout_constraintTop_toTopOf="@id/image71"
                    app:layout_constraintBottom_toBottomOf="@id/image71"
                    app:layout_constraintStart_toStartOf="@id/image71"
                    android:src="@drawable/ic_baseline_done_24"
                    app:tint="@color/white"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <TextView
                android:layout_marginTop="35dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Account"
                android:textSize="40dp"
                android:textStyle="bold"
                android:textColor="#DBE3E2"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
                />
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:id="@+id/te71"
                    android:textSize="15dp"
                    android:textColor="#59506A"
                    android:text="Photo"
                    />
                <ImageView
                    android:id="@+id/image73"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/te71"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:src="@drawable/arrtof"
                    />
                <ImageView
                    android:id="@+id/image74"
                    app:layout_constraintEnd_toEndOf="@id/image73"
                    app:layout_constraintTop_toTopOf="@id/image73"
                    app:layout_constraintBottom_toBottomOf="@id/image73"
                    app:layout_constraintStart_toStartOf="@id/image73"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_person_24"
                    app:tint="#9A9595"
                    />
                <TextView
                    android:layout_marginTop="20dp"
                    android:id="@+id/te72"
                    app:layout_constraintStart_toStartOf="@id/image73"
                    app:layout_constraintTop_toBottomOf="@id/image73"
                    android:text="Upload Image"
                    android:textColor="#1E88DC"
                    app:layout_constraintEnd_toEndOf="@id/image73"
                    android:textSize="18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:layout_marginTop="40dp"
                    android:textColor="#59506A"
                    android:id="@+id/te73"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/te72"
                    />
                <TextView
                    android:id="@+id/te74"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="@id/te72"
                    app:layout_constraintTop_toTopOf="@id/te73"
                    android:text="David Clerisseau"
                    android:textColor="#B3ADAD"
                    />
                <view
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="100dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:alpha=".1"
                    app:layout_constraintStart_toEndOf="@id/te73"
                    app:layout_constraintTop_toBottomOf="@id/te73"
                    android:id="@+id/vue71"
                    />
                <TextView
                    android:layout_marginTop="50dp"
                    android:textColor="#59506A"
                    android:id="@+id/te75"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gender"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/vue71"
                    />
                <ImageView

                    android:id="@+id/image75"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/stand"
                    app:tint="@color/purple_500"
                    app:layout_constraintStart_toStartOf="@id/te74"
                    app:layout_constraintTop_toTopOf="@id/te75"
                    app:layout_constraintBottom_toBottomOf="@id/te75"
                    />
                <ImageView
                    app:tint="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="@id/image75"
                    app:layout_constraintTop_toTopOf="@id/image75"
                    app:layout_constraintBottom_toBottomOf="@id/image75"
                    app:layout_constraintStart_toStartOf="@id/image75"
                    android:src="@drawable/ic_baseline_room_24"
                    />
                <ImageView
                    android:layout_marginStart="15dp"
                    android:id="@+id/image76"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/stand"
                    app:tint="#4546414E"
                    app:layout_constraintStart_toEndOf="@id/image75"
                    app:layout_constraintTop_toTopOf="@id/image75"
                    />
                <ImageView
                    android:id="@+id/image77"
                    app:tint="#59506A"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="@id/image76"
                    app:layout_constraintTop_toTopOf="@id/image76"
                    app:layout_constraintBottom_toBottomOf="@id/image76"
                    app:layout_constraintStart_toStartOf="@id/image76"
                    android:src="@drawable/ic_baseline_science_24"
                    />
                <TextView
                    android:layout_marginTop="45dp"
                    android:textColor="#59506A"
                    android:id="@+id/te76"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Age"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/image77"
                    />
                <TextView
                    android:id="@+id/te77"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="@id/te74"
                    app:layout_constraintTop_toTopOf="@id/te76"
                    android:text="28"
                    android:textColor="@color/white"
                    />
                <view
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="100dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:alpha=".1"
                    app:layout_constraintStart_toEndOf="@id/te73"
                    app:layout_constraintTop_toBottomOf="@id/te77"
                    android:id="@+id/vue72"
                    />
                <TextView
                    android:layout_marginTop="50dp"
                    android:textColor="#59506A"
                    android:id="@+id/te78"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/vue72"
                    />
                <TextView
                    android:id="@+id/te79"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="@id/te74"
                    app:layout_constraintTop_toTopOf="@id/te78"
                    android:text="clerisseau@gmail.com"
                    android:textColor="#B3ADAD"
                    android:textSize="15dp"
                    />
                <view
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="100dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:alpha=".1"
                    app:layout_constraintStart_toEndOf="@id/te73"
                    app:layout_constraintTop_toBottomOf="@id/te79"
                    android:id="@+id/vue73"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</FrameLayout>