<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#BCB2BD">
    <com.google.android.material.card.MaterialCardView android:layout_height="match_parent"
        android:layout_width="match_parent"
        app:cardCornerRadius="45dp"
        android:layout_margin="15dp"
        android:elevation="10dp"
      >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#D5C1AAAA"
            android:padding="20dp">
            <com.google.android.material.card.MaterialCardView android:layout_height="wrap_content"
                android:layout_width="match_parent"
                app:cardCornerRadius="30dp"
                android:elevation="5dp"
                >

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="20dp"
                        >
                        <View
                            android:id="@+id/v1"
                            android:layout_width="10dp"
                            android:layout_height="3dp"
                            android:background="#9C27B0"
                           app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:alpha=".6"
                            />
                        <View
                            android:layout_marginTop="2dp"
                            android:id="@+id/v2"
                            android:layout_width="20dp"
                            android:layout_height="3dp"
                            android:background="#9C27B0"
                            app:layout_constraintStart_toStartOf="@id/v1"
                            app:layout_constraintTop_toBottomOf="@id/v1"
                            android:alpha=".6"
                            />
                        <TextView
                            android:id="@+id/t1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@id/v1"
                            app:layout_constraintBottom_toBottomOf="@id/v2"
                            android:text=":"
                            android:textStyle="bold"
                            android:textSize="20dp"
                            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
                            android:textColor="#9C27B0"
                            />
                        <com.google.android.material.card.MaterialCardView
                            android:layout_height="90dp"
                            android:layout_width="90dp"
                            app:cardCornerRadius="50dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/v2"
                            android:backgroundTint="#DD89A5"
                            android:layout_marginTop="30dp"
                            android:id="@+id/im2"
                            >
                        <ImageView

                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/fille"
                            />
                        </com.google.android.material.card.MaterialCardView>
                        <TextView
                            android:id="@+id/t5"
                            android:layout_marginTop="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toStartOf="@id/im2"
                            app:layout_constraintTop_toBottomOf="@id/im2"
                            android:textSize="24dp"
                            android:textStyle="bold"
                            android:textColor="#6B3E73"
                            android:text="Hira Riaz"
                            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/t5"
                            android:text="UX/UI Designer"
                            android:textStyle="bold"
                            android:textColor="#3A3232"
                            android:textSize="12dp"
                            />
                        <TextView
                            android:layout_marginStart="45dp"
                            android:layout_marginTop="40dp"
                            android:id="@+id/t8"
                            app:layout_constraintTop_toBottomOf="@id/t5"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$8900"
                            android:textSize="18dp"
                            android:textColor="#5A1A65"
                            />
                        <TextView
                            android:layout_marginTop="5dp"
                            android:id="@+id/t9"
                            app:layout_constraintTop_toBottomOf="@id/t8"
                            app:layout_constraintStart_toStartOf="@id/t8"
                            app:layout_constraintEnd_toEndOf="@id/t8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Income"
                            android:textColor="#373131"
                            android:textSize="12dp"
                            />
                        <view
                            android:layout_marginStart="24dp"
                            android:id="@+id/v3"
                            app:layout_constraintStart_toEndOf="@id/t8"
                            app:layout_constraintBottom_toBottomOf="@id/t9"
                            app:layout_constraintTop_toTopOf="@id/t8"
                            android:layout_width="1.5dp"
                            android:layout_height="45dp"
                            android:alpha=".2"
                            />
                        <TextView
                            android:layout_marginStart="20dp"
                            android:id="@+id/t10"
                            app:layout_constraintTop_toTopOf="@id/t8"
                            app:layout_constraintStart_toEndOf="@id/v3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$5500"
                            android:textSize="18dp"
                            android:textColor="#5A1A65"
                            />
                        <TextView
                            android:id="@+id/t11"
                            app:layout_constraintTop_toTopOf="@id/t9"
                            app:layout_constraintTop_toBottomOf="@id/t10"
                            app:layout_constraintStart_toStartOf="@id/t10"
                            app:layout_constraintEnd_toEndOf="@id/t10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Expenses"
                            android:textSize="12dp"
                            android:textColor="#373131"
                            />
                        <view
                            android:layout_marginStart="20dp"
                            android:id="@+id/v4"
                            app:layout_constraintStart_toEndOf="@id/t10"
                            app:layout_constraintBottom_toBottomOf="@id/t11"
                            app:layout_constraintTop_toTopOf="@id/t8"
                            android:layout_width="1.5dp"
                            android:layout_height="45dp"
                            android:alpha=".2"
                            />
                        <TextView
                            android:textColor="#5A1A65"
                            android:layout_marginStart="20dp"
                            android:id="@+id/t12"
                            app:layout_constraintTop_toTopOf="@id/t8"
                            app:layout_constraintStart_toEndOf="@id/v4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$890"
                            android:textSize="18dp"


                            />
                        <TextView
                            android:id="@+id/t13"
                            app:layout_constraintTop_toBottomOf="@id/t12"
                            app:layout_constraintStart_toStartOf="@id/t12"
                            app:layout_constraintTop_toTopOf="@id/t9"
                            android:textColor="#373131"
                            app:layout_constraintEnd_toEndOf="@id/t12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Loan"
                            android:textSize="12dp"
                            />
                        <view
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/t13"
                            android:layout_marginTop="20dp"
                            android:visibility="invisible"
                            />
                    </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                >

                <TextView
                    android:id="@+id/te"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Overview"
                    android:textSize="24dp"
                    android:textStyle="bold"
                    android:textColor="#52225A"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
                    />

                <ImageView

                    android:id="@+id/notif"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:src="@drawable/ic_baseline_notifications_none_24"
                    app:layout_constraintStart_toEndOf="@id/te"
                    app:layout_constraintTop_toTopOf="@id/te"
                    app:layout_constraintBottom_toBottomOf="@id/te"

                    app:tint="#686363" />

                <TextView

                    app:layout_constraintStart_toEndOf="@id/notif"
                    app:layout_constraintTop_toTopOf="@id/notif"
                    app:layout_constraintEnd_toEndOf="@id/notif"
                    android:background="@drawable/rond"
                    android:text=" "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="5dp"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/te"
                    app:layout_constraintBottom_toBottomOf="@id/te"
                    android:text="Sept 13, 2020"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <include layout="@layout/cadre"/>
            <include layout="@layout/cadre1"/>
            <include layout="@layout/cadre2"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"

                >
                <ImageView
                    android:id="@+id/ima2"
                    android:layout_width="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_home_24"
                    app:tint="#F8E7E7"
                    />

                <ImageView
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/ima4"
                    android:id="@+id/ima3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_sharp_payment_24"
                    app:layout_constraintStart_toEndOf="@id/ima2"
                    app:layout_constraintTop_toTopOf="@id/ima2"
                    />

                <ImageView
                    app:layout_constraintEnd_toStartOf="@id/ima5"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:id="@+id/ima4"
                    app:layout_constraintStart_toEndOf="@id/ima3"
                    app:layout_constraintTop_toTopOf="@id/ima2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/arriere"
                    />
                <TextView
                    android:id="@+id/te3"

                    app:layout_constraintStart_toStartOf="@id/ima4"
                    app:layout_constraintEnd_toEndOf="@id/ima4"
                    app:layout_constraintTop_toTopOf="@id/ima4"
                    app:layout_constraintBottom_toBottomOf="@id/ima4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="+"
                    />

                <ImageView
                    android:id="@+id/ima5"
                    app:layout_constraintEnd_toStartOf="@id/ima6"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/ima4"
                    app:layout_constraintTop_toTopOf="@id/ima4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_attach_money_24"
                    />
                <ImageView
                    android:id="@+id/ima6"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/ima4"
                    android:src="@drawable/rond"
                    app:tint="@color/white"
                    />

                <ImageView
                    app:layout_constraintEnd_toEndOf="@id/ima6"
                    app:layout_constraintTop_toTopOf="@id/ima6"
                    app:layout_constraintBottom_toBottomOf="@id/ima6"
                    app:layout_constraintStart_toStartOf="@id/ima6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_outline_person_outline_24"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</FrameLayout>